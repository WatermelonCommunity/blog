{
  "name": "watermelon-blog",
  "description": "Watermelon Blog",
  "version": "0.0.0",
  "scripts": {
    "start": "node __sapper__/build",
    "dev": "run-p css:watch sapper:dev",
    "build": "run-s css:build sapper:build",
    "export": "run-s css:build sapper:export",
    "sapper:dev": "sapper dev",
    "sapper:build": "sapper build",
    "sapper:export": "sapper export",
    "prelint": "npm run format",
    "lint": "eslint --fix src/**/*.{svelte,js}",
    "format": "prettier --write src/**/*.{svelte,js,json}",
    "css:watch": "postcss src/tailwind.css -o static/global.css -w",
    "css:build": "cross-env NODE_ENV=production postcss src/tailwind.css -o static/global.css"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "polka": "0.5.2",
    "sirv": "^1.0.12"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/runtime": "^7.14.6",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.6",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^2.52.3",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.1",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.2.4"
  }
}
